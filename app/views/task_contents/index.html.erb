<p id="notice"><%= notice %></p>

<h1>Task Contents</h1>

<table>
  <thead>
    <tr>
      <th>Task content</th>
      <th>Desired completion date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_contents.each do |task_content| %>
      <tr>
        <td><%= task_content.task_content %></td>
        <td><%= task_content.desired_completion_date %></td>
        <td><%= link_to 'Show', task_content %></td>
        <td><%= link_to 'Edit', edit_task_content_path(task_content) %></td>
        <td><%= link_to 'Destroy', task_content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

