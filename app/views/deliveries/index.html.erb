<p id="notice"><%= notice %></p>

<h1>Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Shipping method</th>
      <th>Delivery company name</th>
      <th>Delivery carrier phone number</th>
      <th>Delivery company address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.shipping_method %></td>
        <td><%= delivery.delivery_company_name %></td>
        <td><%= delivery.delivery_carrier_phone_number %></td>
        <td><%= delivery.delivery_company_address %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

